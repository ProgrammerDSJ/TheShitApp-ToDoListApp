<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for night mode (using light theme) -->
    <style name="Theme.TheShitApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/gray</item>
        <!-- Edit text color -->
        <item name="editTextColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        
        <!-- Dialog styling -->
        <item name="android:dialogTheme">@style/Theme.TheShitApp.Dialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.TheShitApp.Dialog</item>
    </style>
    
    <style name="Theme.TheShitApp.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>
</resources> 